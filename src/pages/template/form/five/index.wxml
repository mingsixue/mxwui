<view class="pageDemo">
    <mx-nav title="表单案例五" />
    <view style="padding-top:{{navHeight}}rpx;"></view>

    <view class="wrap">
        <mx-input placeholder="请输入用户名" label="用户名" required styleType="web" horizontal />
        <mx-input placeholder="请输入密码" password label="密码" styleType="web" leftWidth="96" horizontal />
        <mx-input placeholder="请输入手机号" type="number" maxLength="11" label="手机号" styleType="web" horizontal />
        <mx-input placeholder="请输入身份证" type="idcard" maxLength="18" label="身份证" styleType="web" horizontal />
        <mx-input placeholder="请输入昵称" type="nickname" label="昵称" styleType="web" leftWidth="96" desc="可以使用微信昵称" horizontal />
        <mx-list-picker placeholder="请选择出生年份" mode="date" fields="year" isLeft label="出生年份" styleType="web" horizontal />
        <mx-list-picker placeholder="请选择出生年月" mode="date" fields="month" isLeft label="出生年月" styleType="web" horizontal />
        <mx-list-picker placeholder="请选择生日" mode="date" isLeft label="生日" styleType="web" horizontal />
        <mx-radio-group styleType="web" options="{{sex}}" showLine="{{true}}" label="性别" horizontal />
        <mx-checkbox-group styleType="web" options="{{interest}}" showLine="{{true}}" label="兴趣" horizontal />
        <mx-list-picker options="{{jobs}}" placeholder="请选择岗位" isLeft label="岗位" styleType="web" horizontal />
        <mx-list-picker options="{{multiOptions}}" mode="multiSelector" placeholder="请选择行业" isLeft label="行业" styleType="web" horizontal />
        <mx-list-picker mode="region" placeholder="请选择所在省份" level="province" isLeft label="所在省份" styleType="web" horizontal />
        <mx-list-picker mode="region" placeholder="请选择所在城市" level="city" isLeft label="所在城市" styleType="web" horizontal />
        <mx-list-picker mode="region" placeholder="请选择所在区县" isLeft label="所在区县" styleType="web" horizontal />
        <mx-list-picker mode="region" placeholder="请选择所在街道" level="sub-district" isLeft label="所在街道" styleType="web" horizontal />
        <mx-textarea placeholder="请输入备注" label="备注" styleType="web" horizontal />
    </view>
</view>