<view class="mx-upload"><view wx:if="{{src}}" class="result-wrap" style="width:{{width}}rpx;height:{{width}}rpx;"><image class="cover" mode="widthFix" src="{{type == 'image' ? src : cover}}" style="width:{{width}}rpx;height:{{width}}rpx;" /><view wx:if="{{type == 'image'}}" class="view" bind:tap="handleImage"><view class="icon"><mx-icon name="eye" color="rgba(255,255,255,0.7)" size="64" /></view></view><view wx:if="{{type == 'video'}}" class="play" bind:tap="handleVideo"></view><view wx:if="{{type == 'file'}}" class="view" bind:tap="handleFile"><view class="icon"><mx-icon name="attachment" color="rgba(255,255,255,0.7)" size="64" /></view></view><view wx:if="{{isFail}}" class="results"><view class="result"><mx-icon name="common_close" color="rgba(255,255,255,0.7)" size="64" /><view class="txt">上传失败</view></view></view><view class="del" bind:tap="handleDel"><view class="delIcon"><mx-icon name="close" color="#FFFFFF" size="24" /></view></view></view><view wx:else class="upload-wrap" style="width:{{width}}rpx;height:{{width}}rpx;"><view class="results {{small ? 'results-small' : ''}}" bind:tap="handleUpload"><mx-icon name="common_add" color="#9AA0B1" size="{{small ? 42 : 64}}" /><view class="txt">上传{{type == 'image' ? '图片' : (type == 'video' ? '视频' : '文件')}}</view></view></view></view> 