<view class="mx-list-basic {{showLine ? 'mx-list-basic-line' : ''}}"><view class="mx-list-main"><view wx:if="{{label}}" class="mx-list-left mx-list-left-{{labelAlign}}" style="{{leftWidth ? 'width:'+leftWidth+'rpx;' : ''}}"><view wx:if="{{firstIcon.iconName || firstIcon.iconUrl}}" class="firstIcon" bind:tap="handleFirstClick"><image wx:if="{{firstIcon.iconUrl}}" class="icon" mode="widthFix" src="{{firstIcon.iconUrl}}" style="width:{{firstIcon.iconSize || 48}}rpx;height:{{firstIcon.iconSize || 48}}rpx;" /><mx-icon wx:else name="{{firstIcon.iconName}}" color="{{firstIcon.iconColor || TEXT_COLOR}}" size="{{firstIcon.iconSize || 48}}" /></view><view wx:if="{{requiredPosition == 'left' && required}}" class="required requiredLeft">*</view><view class="label label-{{labelAlign}}" style="color:{{labelColor || TEXT_COLOR}};">{{label}}</view><view wx:if="{{requiredPosition == 'right' && required}}" class="required requiredRight">*</view><view wx:if="{{lastIcon.iconName || lastIcon.iconUrl}}" class="lastIcon" bind:tap="handleLastClick"><image wx:if="{{lastIcon.iconUrl}}" class="icon" mode="widthFix" src="{{lastIcon.iconUrl}}" style="width:{{lastIcon.iconSize || 32}}rpx;height:{{lastIcon.iconSize || 32}}rpx;" /><mx-icon wx:else name="{{lastIcon.iconName}}" color="{{lastIcon.iconColor || PLACEHOLDER_COLOR}}" size="{{lastIcon.iconSize || 32}}" /></view></view><view class="mx-list-right {{isLeft ? 'mx-list-right-l' : 'mx-list-right-r'}}" bind:tap="handleRightClick"><view wx:if="{{content}}" class="mx-list-content {{isLeft ? 'mx-list-content-left' : 'mx-list-content-right'}}" style="color:{{contentColor || TEXT_COLOR}};"> {{content}} </view><view wx:if="{{dot}}" class="dot"></view><view wx:if="{{num}}" class="num">{{num}}</view><view wx:if="{{arrows}}" class="arrows"><mx-icon name="arrows_right" color="{{PLACEHOLDER_COLOR}}" size="32" /></view><slot></slot></view></view><view wx:if="{{desc}}" class="mx-list-foot" style="color:{{descColor || PLACEHOLDER_COLOR}};"> {{desc}} </view></view> 