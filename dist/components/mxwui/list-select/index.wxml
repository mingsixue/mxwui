<view class="mx-list-select"><form-label leftWidth="{{leftWidth}}" label="{{label}}" labelColor="{{labelColor}}" required="{{required}}" requiredPosition="{{requiredPosition}}" firstIcon="{{firstIcon}}" lastIcon="{{lastIcon}}" bind:form_label_firstIcon="handleFirstClick"bind:form_label_lastIcon="handleLastClick" /><view class="list-select-wrap" style="background:{{bgColor}};"><view class="item {{item.disabled ? 'disabled' : ''}}" wx:for="{{options}}" wx:key="text" bind:tap="handleTap" data-idx="{{index}}"><view class="text" style="color:{{item.checked ? textSelectColor || textColor :  textColor}};">{{item.text}}</view><view class="icon"><mx-icon wx:if="{{type == 'single' && singleIcon == 'default' && item.checked}}" name="choice" color="{{iconColor}}" size="{{iconSize}}" /><mx-icon wx:elif="{{type == 'single' && singleIcon == 'radio'}}" name="{{item.checked ? 'radio_checked' : 'radio_empty'}}" color="{{item.checked ? iconColor : PLACEHOLDER_COLOR}}" size="{{iconSize}}" /><mx-icon wx:elif="{{type == 'multiple' && multipleIcon == 'default'}}" name="{{item.checked ? 'radio_right_checked' : 'radio_empty'}}" color="{{item.checked ? iconColor : PLACEHOLDER_COLOR}}" size="{{iconSize}}" /><mx-icon wx:elif="{{type == 'multiple' && multipleIcon == 'checkbox'}}" name="{{item.checked ? 'checkbox_checked' : 'checkbox_empty'}}" color="{{item.checked ? iconColor : PLACEHOLDER_COLOR}}" size="{{iconSize}}" /></view></view></view><form-desc desc="{{desc}}" descColor="{{descColor}}" /></view> 